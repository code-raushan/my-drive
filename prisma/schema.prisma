generator kysely {
  provider = "prisma-kysely"
  output = "../src/db"
  fileName = "types.ts"
  enumFileName = "enums.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String?
  lastName String?
  email String? @unique
  phone String @unique
  files File[]
  folders Folder[]
}

model Folder {
  id String @id
  folderName String
  parentFolder    Folder?  @relation("FolderToSubfolders", fields: [parentFolderId], references: [id])
  parentFolderId  String?
  subfolders Folder[] @relation("FolderToSubfolders")
  files File[]
  owner User @relation(fields: [ownerId], references: [id])
  ownerId String
  createdAt DateTime
  updatedAt DateTime
}

model File {
  id String @id @default(uuid())
  fileName String
  folder Folder? @relation(fields: [folderId], references: [id])
  folderId String?
  s3Key String
  ownerId String
  owner User @relation(fields: [ownerId], references: [id])
  size BigInt?
  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model UserSession {
  id String @id 
  phoneNumber String
  otp String
  session String
  createdAt DateTime
  updatedAt DateTime
}
