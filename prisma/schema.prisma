generator kysely {
  provider = "prisma-kysely"
  output = "../src/db"
  fileName = "types.ts"
  enumFileName = "enums.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String?
  lastName String?
  email String? @unique
  phone String @unique
  files File[]
}

model File {
  id String @id @default(uuid())
  fileName String
  s3Key String
  ownerId String
  owner User @relation(fields: [ownerId], references: [id])
  size BigInt?
  createdAt DateTime
  updatedAt DateTime @updatedAt
}

